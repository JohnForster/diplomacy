{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { 
      "*": ["types/*"],
      "@client/*":["src/client/*"],
      "@server/*":["src/server/*"]
    },
    "outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "lib": [
      "dom",
      "es7"
    ],
    "allowSyntheticDefaultImports": true
  },
  
}